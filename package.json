{
  "name": "metric_dashboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "app/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev --turbo",
    "dev:electron": "wait-on http://localhost:3000 && ELECTRON_START_URL=http://localhost:3000 electron .",
    "build": "next build --turbopack",
    "start": "electron .",
    "package": "electron-packager . metric_dashboard --platform=darwin --arch=x64 --out=dist"
  },
  "dependencies": {
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-packager": "^17.1.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
